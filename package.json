{
  "name": "gaggle",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "start": "hexo clean && concurrently -p \"[{name}]\" -n \"GEN,SRV\" -k \"hexo generate -w --draft --silent\" \"sleep 5; hexo server -s\"",
    "test": "echo travis_fold:start:test && npm run test:backend && npm run test:frontend && npm run test:ui && istanbul report && echo travis_fold:end:test",
    "test:backend": "echo travis_fold:start:backend-tests && istanbul cover _mocha test/unit && echo travis_fold:end:backend-tests",
    "test:frontend": "echo travis_fold:start:frontend-tests && karma start && echo travis_fold:end:frontend-tests",
    "test:ui": "echo travis_fold:start:ui-tests && hexo clean && concurrently -r -s first --kill-others \"hexo server --draft --silent\" \"sleep 5 && wdio\" && echo travis_fold:end:ui-tests",
    "deploy": "./build_scripts/deploy",
    "deploy:ci": "echo travis_fold:start:deploy && ./build_scripts/ci-deploy && echo travis_fold:start:deploy",
    "build": "hexo clean && hexo generate",
    "lint": "hexo clean && hexo generate --debug --draft --silent && eslint . && stylelint public/**/*.css",
    "submitcov": "echo travis_fold:start:submit-coverage && cat ./coverage/lcov.info | ./node_modules/.bin/codacy-coverage && echo travis_fold:end:submit-coverage"
  },
  "hexo": {
    "version": "3.2.2"
  },
  "dependencies": {
    "gascrolldepth": "github:leighmcculloch/gascrolldepth.js",
    "hexo": "^3.2.2",
    "hexo-filter-cleanup": "^1.0.6",
    "hexo-generator-archive": "^0.1.4",
    "hexo-generator-feed": "^1.2.0",
    "hexo-renderer-browserify": "^0.1.0",
    "hexo-renderer-jade": "^0.3.0",
    "hexo-renderer-markdown-it": "^3.4.1",
    "hexo-renderer-stylus": "^0.3.1",
    "hexo-server": "^0.2.0",
    "hexo-tag-gist-it": "github:gaggle/hexo-tag-gist-it",
    "lodash": "^4.17.2",
    "moment": "^2.17.0"
  },
  "devDependencies": {
    "browserify": "^13.1.1",
    "browserify-istanbul": "^2.0.0",
    "chai": "^3.5.0",
    "codacy-coverage": "^2.0.0",
    "concurrently": "^3.1.0",
    "eslint": "^3.11.1",
    "istanbul": "^0.4.5",
    "karma": "^1.3.0",
    "karma-browserify": "^5.1.0",
    "karma-coverage": "^1.1.1",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.1",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-sauce-launcher": "^1.1.0",
    "karma-sinon-chai": "^1.2.4",
    "mocha": "^3.1.2",
    "mocha-istanbul": "^0.3.0",
    "mocha-lcov-reporter": "^1.2.0",
    "parallel-mocha": "0.0.7",
    "phantomjs-prebuilt": "^2.1.13",
    "rewire": "^2.5.2",
    "sauce-connect-launcher": "^1.1.1",
    "selenium-server": "3.0.1",
    "selenium-webdriver": "^3.0.1",
    "sinon": "^1.17.6",
    "sinon-chai": "^2.8.0",
    "stylelint": "^7.6.0",
    "stylelint-config-standard": "^15.0.0",
    "stylelint-order": "^0.2.2",
    "wdio-mocha-framework": "^0.5.4",
    "wdio-phantomjs-service": "^0.2.2",
    "wdio-sauce-service": "^0.2.5",
    "webdriverio": "^4.4.0"
  }
}
