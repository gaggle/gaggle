footer
  display flex
  justify-content center
  padding 2.5em 0
  font-size .9em
  color color-footer-text

  div
    padding 0 0.2em

.paginator
  margin: 4em 0
  text-align: center
  .prev, .next
    display: inline-block
    margin: 0 4px
    padding: 4px 12px
    border-radius: 4px
    border-bottom: 4px solid color-pagination-border
    font-size: 14px
    color: color-pagination-text
    background-color: color-pagination-background
    &:hover
      background-color: color-pagination-hover
