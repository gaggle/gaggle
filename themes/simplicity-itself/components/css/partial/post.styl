$codebase
  color color-post-code-type
  font-size 1em
  font-weight 600
  height 20px
  padding 5px
  position absolute
  right 0
  text-align right
  top -4px
  width 20px

article
  .info
    display flex

    @media mq-tablet
      display block

    .title
      margin 0 0 0.65em
      padding-right .5em

      @media mq-tablet
        margin-bottom 0

    .date
      color color-post-date
      margin-bottom 1.2em
      width 100px

      @media mq-tablet
        margin-top 0

      span
        margin-left 0.5rem

  h1, h2, h3, h4, h5, h6
    margin 1em 0
    position relative

  h1
    font-size 24px

  h2
    font-size 22px

  h3
    font-size 20px

  h4, h5, h6
    font-size 17px

  a
    color color-post-link

  blockquote
    background-color color-quote-background
    margin 0.5em .8em
    padding 1.5em 1em
    p
      font-style italic
      margin 0 2em

    &.pullquote
      position relative

      p
        &::before, &::after
          font-family font-serif
          font-size 4em
          height 1.3em
          position absolute
        &::before
          content open-quote
          left 0.2em
          top -0.2em
        &::after
          bottom -0.4em
          content close-quote
          right 0.4em
          text-align right

      &.left, &.right
        width 17em

      &.left
        float left

      &.right
        float right

    footer
      display block
      margin 0
      padding 0
      text-align right
      &::before
        content "â€”"
        display block
        font-size 2em
        height 1em
      cite
        padding-left 0.5em

  img
    display block
    margin 1em auto
    max-width 100%

  .video-container
    height 0
    margin-bottom 2em
    padding-bottom 56.25%
    padding-top 30px
    position relative

    & iframe, & object, & embed
      height 100%
      left 0
      position absolute
      top 0
      width 100%

  & table, & figure.highlight
    box-shadow 0 1px 2px rgba(0, 0, 0, 0.125)

  ul
    list-style initial

  ol
    list-style decimal

  li
    margin-left .8em

  @media mq-tablet-gutter
    li
      margin-left 0

    li li
      margin-left .8em

  hr
    margin 20px auto

  figcaption > *
    padding 0 2px

  pre
    line-height line-height-code
    margin 0
    padding 1.2em 1.4em

  .highlight
    background-color color-post-highlight-background
    border-radius 2px
    margin 1em 0
    overflow-x auto
    position relative

    table, tr, td
      border-collapse collapse
      margin 0
      padding 0
      width 100%

    .gutter
      display none

    .line.marked
      background-color color-post-code-marked-line

    code-signs(keys)
      for key in keys
        &.{key} .code::after
          content key
          @extend $codebase

    signs = "html", "js", "bash", "css", "scss", "diff", "java", "xml", "python", "json", "swift", "ruby", "perl", "php", "c", "java", "cpp", "ts"
    code-signs(signs)

    &.cpp .code::after
      content 'c++'

  code, pre
    background-color color-post-code-background
    color #525252
    font-family font-mono
    font-size font-code-size

    .function .keyword,
    .constant
      color #0092db

    .keyword,
    .attribute
      color #e96900

    .number,
    .literal
      color #ae81ff

    .tag,
    .tag .title,
    .change,
    .winutils,
    .flow,
    .lisp .title,
    .clojure .built_in,
    .nginx .title,
    .tex .special
      color #2973b7

    .symbol,
    .symbol .string,
    .value,
    .regexp
      color #42b983

    .title
      color #83B917

    .tag .value,
    .string,
    .subst,
    .haskell .type,
    .preprocessor,
    .ruby .class .parent,
    .built_in,
    .sql .aggregate,
    .django .template_tag,
    .django .variable,
    .smalltalk .class,
    .javadoc,
    .django .filter .argument,
    .smalltalk .localvars,
    .smalltalk .array,
    .attr_selector,
    .pseudo,
    .addition,
    .stream,
    .envvar,
    .apache .tag,
    .apache .cbracket,
    .tex .command,
    .prompt
      color #42b983

    .comment,
    .java .annotation,
    .python .decorator,
    .template_comment,
    .pi,
    .doctype,
    .shebang,
    .apache .sqbracket,
    .tex .formula
      color #b3b3b3

    .deletion
      color #BA4545

    .coffeescript .javascript,
    .javascript .xml,
    .tex .formula,
    .xml .javascript,
    .xml .vbscript,
    .xml .css,
    .xml .cdata
      opacity 0.5
