article
  .info
    display flex

    @media mq-tablet
      display block

    .title
      margin 0 0 0.65em
      padding-right .5em

      @media mq-tablet
        margin-bottom 0

    .date
      color color-post-date
      margin-bottom 1.2em
      width 100px

      @media mq-tablet
        margin-top 0

      span
        margin-left 0.5rem

  h1, h2, h3, h4, h5, h6
    margin 1em 0
    position relative

  h1
    font-size 24px

  h2
    font-size 20px

  h3
    font-size 18px

  h4, h5, h6
    font-size 16px

  a
    color color-post-link

  blockquote
    background-color color-quote-background
    margin 0.5em .8em
    padding 1.2em 1em
    p
      font-style italic
      margin 0 2em

    &.pullquote
      position relative

      p
        &::before, &::after
          font-family font-serif
          font-size 4em
          height 1.3em
          position absolute
        &::before
          content open-quote
          left 0.2em
          top -0.2em
        &::after
          bottom -0.4em
          content close-quote
          right 0.4em
          text-align right

      @media mq-tablet
        &.left, &.right
          width 17em

        &.left
          float left

        &.right
          float right

    footer
      display block
      margin 0
      padding 0
      text-align right
      &::before
        content "â€”"
        display block
        font-size 2em
        height 1em
      cite
        padding-left 0.5em

  img
    display block
    margin 1em auto
    max-width 100%

  .video-container
    height 0
    margin-bottom 2em
    padding-bottom 56.25%
    padding-top 30px
    position relative

    & iframe, & object, & embed
      height 100%
      left 0
      position absolute
      top 0
      width 100%

  & table, & figure.highlight
    box-shadow 0 1px 2px rgba(0, 0, 0, 0.125)

  ul
    list-style initial

  ol
    list-style decimal

  li
    margin-left .8em

  @media mq-tablet-gutter
    li
      margin-left 0

    li li
      margin-left .8em

  hr
    margin 20px auto

  figcaption > *
    padding 0 2px
