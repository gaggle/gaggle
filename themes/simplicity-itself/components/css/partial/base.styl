html, body
  height 100%
  width 100%

body
  background-color color-background
  color color-text
  font-family font-sans
  font-size font-size
  line-height line-height
  margin 0
  quotes "“" "”" "‘" "’"

ul
  list-style-type none
  margin 0
  padding 0

a, a:active
  color color-link

p
  margin 10px 0

hr
  border 0

code
  border-radius 2px
  color color-code
  margin 0 2px
  padding 3px 5px
  white-space inherit

iframe, video
  display block
  margin 1rem auto
  max-width 100%

table
  margin 1em auto
  width 100%
  thead
    background-color color-table-header
    th
      min-width 20px
      padding 5px

  tbody
    tr:nth-child(2n)
      background-color color-table-background-alt

    td
      padding 5px
      vertical-align text-top

section.container
  margin 2em layout-margins

hr
  background-image linear-gradient(left, transparent, color-header-divider, transparent)
  border 0
  height 1px
  margin 0 auto 10px
  max-width 300px
  width 80%

abbr[title], acronym[title]
  border-bottom 1px dotted color-text
  text-decoration none

.wrap
  @media mq-tablet
    margin 0 auto
    width layout-max-width

.copyright
  display none
