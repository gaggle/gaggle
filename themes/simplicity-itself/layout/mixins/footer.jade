mixin footer()
  +_site-info()

mixin post-footer()
  +_author-section(page.author || "gaggle")
  +_site-info()

mixin _author-section(key)
  - var author = theme.authors[key]
  if author
    section.author-info
      img.image.profile-pic(src=author.pic, alt=`Picture of ${author.name}`)
      .name= author.name
      .blurb= author.blurb
  else
    section.missing-author-info

mixin _site-info()
  section.site-info
    - var now = moment()
    .last-build
      = "Updated "
      abbr.relative-time(title=now.format("MMMM Do YYYY, HH:mm:ss"), data-datetime=now.format())= now.format("MMM Do")
    .credit Powered by #[a(href="https://hexo.io") Hexo]
